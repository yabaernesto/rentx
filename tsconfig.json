{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true, // (geralmente necessário junto)
      // aliases de importações
      "baseUrl": "./src",
      "paths": {
         "@modules/*": [
            "modules/*"
         ],
         "@config/*": [
            "config/*"
         ],
         "@shared/*": [
            "shared/*"
         ],
         "@errors/*": [
            "errors/*"
         ],
      }
   }
}